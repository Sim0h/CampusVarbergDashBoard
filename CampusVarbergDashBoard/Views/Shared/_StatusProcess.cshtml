@model IEnumerable<StatusDistribution>
@using Microsoft.AspNetCore.Mvc.Rendering

<!-- Add a container div with a class for styling -->
<div class="chart-container">
    <ejs-chart id="chart" isResponsive="true" width="100%" height="400px">
        <e-chart-primaryxaxis valueType="Category" labelFormat="y"></e-chart-primaryxaxis>
        <e-chart-primaryyaxis minimum="0"></e-chart-primaryyaxis>

        <e-series-collection>
            <e-series type="Line" dataSource="@ViewBag.dataSource" xName="Status" yName="Count">
                <e-series-marker visible="true" width="10" height="10"></e-series-marker>
            </e-series>
        </e-series-collection>
        <e-chart-tooltipsettings enable="true"></e-chart-tooltipsettings>
    </ejs-chart>
</div>

<!-- Add CSS styles to control the width of the container -->
<style>
    .chart-container {
        width: 90%; /* Adjust this value to make the chart wider or narrower */
        margin: 0 auto; /* Center the chart horizontally */
    }
</style>

